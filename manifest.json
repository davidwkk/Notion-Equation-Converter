{
  "name": "Notion Equation Converter",
  "description": "Convert LaTeX block equations \\[ \\] to inline equations $ $ in Notion pages",
  "version": "1.1",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["*://*.notion.so/*", "*://*.notion.site/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Convert Notion Equations",
    "default_icon": "icon.png"
  },
  "author": "David Wong",
  "homepage_url": "https://github.com/davidwkk/notion-equation-converter"
}
